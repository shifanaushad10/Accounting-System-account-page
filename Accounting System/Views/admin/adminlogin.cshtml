﻿@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Accounting System - Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/content/css/style.css">
</head>
<body>
    <header class="header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-auto">
                    <img src="~/Content/images/aytech_logo.jpeg" alt="Accounting System Logo" class="header-logo">
                </div>
                <div class="col">
                    <h1 class="header-title">Accounting System</h1>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Login</h2>

                        @* Display the error message if it exists *@
                        @if (!String.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                        }

                        <form method="post" action="@Url.Action("Login", "Login")">
                            <div class="mb-3">
                                <label for="username" class="form-label">Username</label>
                                <input type="text" class="form-control" id="username" name="txtUser" placeholder="Enter your username" required>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" class="form-control" id="password" name="txtPassw" placeholder="Enter your password" required>
                            </div>
                            <div class="mb-3">
                                <a href="#" class="text-muted">Forgot Password?</a>
                            </div>
                            <button type="submit" class="btn btn-primary" name="action" value="Submit">Login</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="text-center">
        <p>&copy; 2022 Company Name. All rights reserved.</p>
    </footer>
</body>
</html>