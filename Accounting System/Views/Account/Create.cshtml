@{
    ViewBag.Title = "Create New Account";
}

<h2>Create New Account</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("Date", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("date", null, htmlAttributes: new { @class = "form-control", type = "date" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Description", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("description", null, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Credit", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("credit", null, new { @class = "form-control", type = "number", step = "0.01" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Debit", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("debit", null, new { @class = "form-control", type = "number", step = "0.01" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Balance", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("balance", null, new { @class = "form-control", type = "number", step = "0.01" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
