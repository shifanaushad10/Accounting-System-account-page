@model Accounting_System.Models.AccountViewModel

@{
    ViewBag.Title = "Delete Account";
}

<h2>Delete Account</h2>

<h3>Are you sure you want to delete this account?</h3>

<div>
    <h4>Account Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Account ID</dt>
        <dd class="col-sm-10">@Model.AccountID</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Credit</dt>
        <dd class="col-sm-10">@Model.Credit</dd>

        <dt class="col-sm-2">Debit</dt>
        <dd class="col-sm-10">@Model.Debit</dd>

        <dt class="col-sm-2">Balance</dt>
        <dd class="col-sm-10">@Model.Balance</dd>
    </dl>

    @using (Html.BeginForm("DeleteConfirmed", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.AccountID) <!-- Hidden field for AccountID -->

        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
